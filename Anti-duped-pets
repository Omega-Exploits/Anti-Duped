<body>
<div class="overlay" id="overlay">
  <div class="card" id="card">
    <div class="upper-bar" id="upperText">Loading â€” please wait</div>
    <div class="bar"><div class="fill" id="progressFill"></div></div>
    <div class="percent" id="percent">1%</div>
    <div class="complete-msg" id="completeMsg">Unduping Complete!</div>
  </div>
</div>
<script>
let progress = 1;
const fill = document.getElementById('progressFill');
const percentEl = document.getElementById('percent');
const upperText = document.getElementById('upperText');
const completeMsg = document.getElementById('completeMsg');

function setProgress(n){
  progress = Math.min(100, n);
  fill.style.width = progress + '%';
  percentEl.textContent = Math.round(progress) + '%';
  if(progress >= 100){
    upperText.style.display = 'none';
    percentEl.style.display = 'none';
    fill.style.width = '100%';
    completeMsg.style.display = 'block';
  }
}

setProgress(progress);
const timer = setInterval(()=>{
  setProgress(progress + 10);
  if(progress >= 100){
    clearInterval(timer);
  }
}, 20000);
</script>
</body>
</html>
